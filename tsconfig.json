{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "lib": ["ES6"],
    "module": "ES6",
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {
      "@helpers": ["./src/helpers"],
      "@utils": ["./src/utils"],
      "@templates": ["./src/templates"],
      "@commands": ["./src/commands"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["esnext"]
}
